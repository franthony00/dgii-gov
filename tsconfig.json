{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",

    // React 19 + Next.js 16 JSX runtime
    "jsx": "react-jsx",

    "incremental": true,

    // Rutas absolutas
    "paths": {
      "@/*": ["./*"]
    },

    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true
  },

  // Archivos que debe incluir TypeScript
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  // Archivos a excluir
  "exclude": ["node_modules"]
}
