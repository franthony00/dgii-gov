{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    // React 19 + Next.js 16 JSX runtime
    "jsx": "react-jsx",

    "incremental": true,

    "plugins": [
      {
        "name": "next"
      }
    ],

    // Rutas absolutas "@/..."
    "paths": {
      "@/*": ["./*"]
    }
  },

  // Archivos a incluir
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  // Archivos a excluir
  "exclude": ["node_modules"]
}
